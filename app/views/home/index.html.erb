      <div id="screenshots">
        <% (0..4).to_a.each do |i| %>
          <%= link_to_function image_tag("screenshots/t#{i}.png", :class => :screenshot), "show_screenshot(#{i})", :class => :screenshot_link %>
        <% end %>
        <div class="clear"></div>
